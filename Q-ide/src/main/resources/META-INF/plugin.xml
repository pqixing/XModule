<idea-plugin>
    <id>com.pqixing.modularization.idea</id>
    <name>Modularization</name>
    <version>2.0.0</version>
    <vendor email="pqixing86@gmail.com" url="https://github.com/pqixing/modularization">pqixing
    </vendor>

    <description>
        Help to run modularization gradle plugin , provide ui operator for task!!
    </description>

    <change-notes>
        Support for cvte env, remove all inner setting!!
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="181.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>
    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>
    <depends>org.jetbrains.android</depends>
    <actions>


        <group id="QTools" popup="true" text="QTools" class="com.pqixing.intellij.actions.QToolGroup">
            <add-to-group group-id="BuildMenu" anchor="first"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
            <action id="Modularization.Import" class="com.pqixing.intellij.actions.ImportAction"
                    text="Import">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt I"/>
            </action>
            <action id="Modularization.Jekins" class="com.dachen.creator.actions.BuilderAction"
                    text="Builder">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift B"/>
            </action>

            <action id="Modularization.ToMaven" class="com.pqixing.intellij.actions.ToMavenAction"
                    text="ToMaven"/>
            <separator/>

            <action id="Modularization.OpenAction" class="com.pqixing.intellij.actions.OpenNewAction" text="OpenPJ">
                <add-to-group group-id="WelcomeScreen.Configure" anchor="first"/>
                <add-to-group group-id="FileMenu" anchor="first"/>
            </action>
            <action id="Modularization.FormatAction" class="com.pqixing.intellij.actions.FormatAction"
                    text="FormatPJS">
                <add-to-group group-id="ViewMenu" anchor="last"/>
                <keyboard-shortcut keymap="$default" first-keystroke="alt F"/>
            </action>

            <separator/>

            <action id="Modularization.DpsAnalyse"
                    class="com.pqixing.intellij.actions.DpsAnalyseAction" text="DpsAnalyse"/>
            <action id="Modularization.ReIndexVersion"
                    class="com.pqixing.intellij.actions.ReIndexVersionAction" text="VersionSync"/>

            <separator/>
            <action id="Modularization.routercreator"
                    class="com.pqixing.intellij.actions.RouteCreate" text="PathCreator"
                    description="router auto create code"/>
            <separator/>
        </group>
        <group id="QTools.GitBatch" popup="true" text="GitBatch" class="com.pqixing.intellij.actions.QToolGroup">
            <add-to-group group-id="VcsGroups" anchor="last"/>
            <add-to-group group-id="QTools" anchor="last"/>
            <action id="Modularization.GitSync" class="com.pqixing.intellij.actions.GitSyncAction" text="Clone"/>
            <action id="Modularization.GitMerge"
                    class="com.pqixing.intellij.actions.GitBranchAction" text="Merge"/>
            <action id="Modularization.GitCheckout" class="com.pqixing.intellij.actions.GitCheckoutAction"
                    text="Checkout"/>
        </group>
    </actions>
</idea-plugin>