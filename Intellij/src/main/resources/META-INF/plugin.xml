<idea-plugin>
    <id>com.pqixing.modularization.idea</id>
    <name>Modularization</name>
    <version>1.0</version>
    <vendor email="pqixing86@gmail.com" url="https://github.com/pqixing/modularization">pqixing
    </vendor>

    <description>
        Help to run modularization gradle plugin , provide ui operator for task!!
    </description>

    <change-notes>
        Help to run modularization gradle plugin , provide ui operator for task!!
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="148.0" />

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>
    <depends>Git4Idea</depends>
    <depends>org.jetbrains.android</depends>
    <actions>
        <group id="QTools" popup="true" text="QTools">
            <add-to-group group-id="BuildMenu" anchor="first" />
            <add-to-group group-id="EditorPopupMenu" anchor="first" />
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first" />
            <action id="Modularization.Import" class="com.pqixing.intellij.actions.ImportAction" text="Import">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt I" />
            </action>
            <separator/>
            <group id="Modularization.Code" popup="true" text="ForCode">
                <action id="Modularization.GitSync" class="com.pqixing.intellij.actions.GitSyncAction" text="GitSync" />
                <separator/>
                <action id="Modularization.GitState" class="com.pqixing.intellij.actions.GitStateAction" text="GitState" />
                <separator/>
                <action id="Modularization.GitCheckout" class="com.pqixing.intellij.actions.GitCheckoutAction" text="Checkout" />
                <separator/>
                <action id="Modularization.GitBranch" class="com.pqixing.intellij.actions.GitBranchAction" text="GitBranch" />
                <separator/>
                <action id="Modularization.NewModule" class="com.pqixing.intellij.actions.NewModuleAction" text="NewModule" />
                <separator/>
                <action id="Modularization.ReIndexVersion" class="com.pqixing.intellij.actions.ReIndexVersionAction" text="IndexVersion" />
            </group>
            <separator />
            <action id="Modularization.ToMaven" class="com.pqixing.intellij.actions.ToMavenAction" text="ToMaven" />
            <separator/>
            <action id="Modularization.BuildApk" class="com.pqixing.intellij.actions.BuildApkAction" text="InstallApk" />
            <separator/>
            <action id="Modularization.DpsAnalyse" class="com.pqixing.intellij.actions.DpsAnalyseAction" text="DpsAnalyse" />
            <separator/>


            <group id="Modularization.Creator" popup="true" text="CodeCreator">
                <action id="Modularization.mvpcreator" class="com.dachen.creator.actions.MvpCreator" text="MvpCreator" description="auto create MVP code" />
                <action id="Modularization.routercreator" class="com.dachen.creator.actions.PathCreator" text="RouterCreator" description="router auto create code" />
                <action id="Modularization.modelcreator" class="com.dachen.creator.actions.ModelCreator" text="ModelCreator" description="auto create model code" />
            </group>
            >
        </group>
    </actions>
</idea-plugin>