<idea-plugin>
    <id>com.pqixing.XModule.idea</id>
    <name>XModule</name>
    <version>1.0</version>
    <vendor email="pqixing86@gmail.com" url="https://github.com/pqixing/XModule">pqixing
    </vendor>

    <description>
        Help to run XModule gradle plugin , provide ui operator for task!!
    </description>

    <change-notes>
        add mvp base
        fix dialog location on multi devices
        fix import project
        fix compatibility
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="181.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>
    <depends>org.jetbrains.android</depends>
    <actions>

        <action id="XModule.fastBuilder" class="com.pqixing.intellij.actions.FastBuilderAction" text="Builder"
                icon="AllIcons.Toolwindows.ToolWindowBuild">
            <add-to-group group-id="ToolbarRunGroup" relative-to-action="DeviceAndSnapshotComboBox" anchor="after"/>
        </action>

        <action id="XModule.FormatAction" class="com.pqixing.intellij.actions.FormatAction"
                text="FormatModule">
            <add-to-group group-id="ViewMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt F"/>
        </action>
        <group id="XModule" popup="true" text="XModule" class="com.pqixing.intellij.group.XModuleGroup">
            <add-to-group group-id="BuildMenu" anchor="first"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
            <action id="XModule.Import" class="com.pqixing.intellij.actions.ImportAction"
                    text="Import">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt I"/>
            </action>
            <action id="XModule.newBuilder" class="com.pqixing.intellij.actions.NewBuilderAction" text="Builder">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift B"/>
            </action>


            <action id="XModule.ToMaven" class="com.pqixing.intellij.actions.ToMavenAction"
                    text="ToMaven"/>
            <separator/>
            <action id="XModule.sync" class="com.pqixing.intellij.actions.SyncAction" text="SyncCode"
                    icon="AllIcons.Actions.Refresh"/>
<!--                <add-to-group group-id="ToolbarRunGroup" relative-to-action="XModule.fastBuilder" anchor="after"/>-->

            <action id="XModule.OpenAction" class="com.pqixing.intellij.actions.XModuleAction"
                    text="NewXMdoule">
                <add-to-group group-id="WelcomeScreen.Configure" anchor="first"/>
                <add-to-group group-id="FileMenu" anchor="first"/>
            </action>

            <separator/>

            <action id="XModule.ReIndexVersion"
                    class="com.pqixing.intellij.actions.IndexMavenAction" text="IndexMaven"/>

            <separator/>
            <action id="XModule.routercreator"
                    class="com.pqixing.intellij.actions.RouteCreate" text="PathCreator"
                    description="router auto create code"/>
            <action id="com.libiao.mvpcreator" class="com.pqixing.creator.actions.MvpCreator" text="MvpCreator"
                    description="auto create MVP code"/>
            <separator/>
        </group>
        <group id="XModule.GitBatch" popup="true" text="GitBatch" class="com.pqixing.intellij.group.XModuleGroup">
            <add-to-group group-id="VcsGroups" anchor="last"/>
            <add-to-group group-id="XModule" anchor="last"/>
            <action id="XModule.GitSync" class="com.pqixing.intellij.actions.GitSyncAction" text="Clone"/>
            <action id="XModule.GitMerge"
                    class="com.pqixing.intellij.actions.GitBranchAction" text="Merge"/>
            <action id="XModule.GitCheckout" class="com.pqixing.intellij.actions.GitCheckoutAction"
                    text="Checkout"/>
        </group>
    </actions>
</idea-plugin>